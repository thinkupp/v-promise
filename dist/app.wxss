._button {
  padding: 0;
  margin: 0;
  border: none;
  display: inline-block;
  border-radius: 0;
}
._button:after {
  border: none;
}
page {
  height: 100%;
  font-size: 28rpx;
}
.create-type {
  color: #009688;
}
.common-cell {
  padding: 10px 15px;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  font-size: 14px;
  color: #333;
  width: 100%;
  position: relative;
}
.common-cell::after {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  width: auto;
  -webkit-transform: scale(1, 0.5);
  transform: scale(1, 0.5);
  border-bottom: 1px solid #e5e5e5;
}
